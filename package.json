{
  "name": "npm-build",
  "version": "1.0.0",
  "description": "A set of npm scripts.",
  "repository": "https://gitlab.com/joernba/joern-im-jekyll",
  "license": "UNLICENSED",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "stylelint": {
    "rules": {
      "block-no-empty": true,
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "color-no-invalid-hex": true,
      "declaration-colon-space-after": "always",
      "max-empty-lines": 2
    }
  },
  "scripts": {
    "clean": "rimraf assets/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r assets/css/*",
    "scss": "node-sass --output-style compressed -o assets/css _dev/src/scss",
    "lint": "eslint _dev/src/js || true",
    "lint-scss": "stylelint _dev/src/scss/**/*.scss --syntax scss || true",
    "uglify": "mkdirp assets/js -p && uglifyjs _dev/src/js/*.js -m -o assets/js/app.js && uglifyjs _dev/src/js/*.js -m -c -o assets/js/app.min.js",
    "resize:medium": "mkdirp assets/images/medium -p && sharp -i _dev/src/images/pages/**/*.* -o assets/images/medium resize 1024 1024 --max",
    "resize:small": "mkdirp assets/images/small -p && sharp -i _dev/src/images/pages/**/*.* -o assets/images/small resize 450 450 --max",
    "imagemin": "imagemin _dev/src/images/{*,**/*,**/**/*} -o assets/images",
    "serve:jekyll": "jekyll serve",
    "build:jekyll": "bundle exec jekyll build",
    "build:jekyllprod": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:css": "npm run lint-scss && npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:html": "htmlclean -i _site -o _site",
    "build:images": "npm run imagemin && npm run resize:medium && npm run resize:small",
    "build:all": "npm run clean && npm run build:css && npm run build:js && npm run build:images && npm run build:jekyll && npm run build:html",
    "build:allprod": "npm run clean && npm run build:css && npm run build:js && npm run build:images && npm run build:jekyllprod && npm run build:html",
    "watch:css": "onchange \"_dev/src/scss\" -- npm run build:css",
    "watch:js": "onchange \"_dev/src/js\" -- npm run build:js",
    "watch:images": "onchange \"_dev/src/images\" -- npm run build:images",
    "watch:all": "npm-run-all -p watch:css watch:js watch:images",
    "dev": "npm-run-all -p watch:css watch:js watch:images serve:jekyll",
    "postinstall": "bundle install"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "htmlclean-cli": "^1.0.4",
    "imagemin-cli": "*",
    "mkdirp": "*",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "rimraf": "*",
    "sharp": "^0.18.1",
    "sharp-cli": "*",
    "stylelint": "*",
    "svg-sprite-generator": "*",
    "uglify-js": "^3.0.15"
  }
}
